<style>
  /* stylelint-disable */
  @media (min-width: 680px) {
    .hero__overlay {
      background: rgba(255, 255, 255, {{ section.settings.overlay_opacity }});
    }
    {%- if section.settings.overlay_theme == "dark" -%}
    .hero--{{ section.id }}.hero--dark .hero__overlay {
      background: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});
    }
    {%- endif -%}
  }
  /* stylelint-enable */
</style>

<section class="hero hero--{{ section.id }} hero--{{ section.settings.overlay_theme }} bg-gray-200">
    {%- if section.settings.image != blank -%}
      {% include 'responsive-image' with image: section.settings.image, image_class: 'hero__img', full_width: true %}
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg hero__img' }}
    {%- endif -%}

    <div class="hero__position hero__position--{{ section.settings.overlay_position }}">
      <div class="hero__overlay" data-aos="fade-up" data-aos-delay="500" data-aos-duration="1000">
        {%- if section.settings.title != blank -%}
          <h1 class="text-4xl m-0">{{ section.settings.title | escape }}</h1>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          {{ section.settings.text }}
        {%- endif -%}
        {%- if section.settings.button_label != blank -%}
          <p class="mt-8 mb-0"><a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_label }}</a></p>
        {%- endif -%}
      </div>
    </div>

</section>

{% schema %}
{
  "name": "Image with text overlay",
  "class": "index-section index-section--image-with-text-overlay",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Hero Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "select",
      "id": "overlay_position",
      "label": "Overlay position",
      "default": "left",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ]
    },
    {
      "type": "select",
      "id": "overlay_theme",
      "label": "Overlay Color",
      "default": "light",
      "options": [
        {
          "label": "Dark",
          "value": "dark"
        },
        {
          "label": "Light",
          "value": "light"
        }
      ]
    },
    {
      "type": "select",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "default": "0.5",
      "options": [
        {
          "label": "90%",
          "value": "0.9"
        },
        {
          "label": "80%",
          "value": "0.8"
        },
        {
          "label": "70%",
          "value": "0.7"
        },
        {
          "label": "60%",
          "value": "0.6"
        },
        {
          "label": "50%",
          "value": "0.5"
        },
        {
          "label": "40%",
          "value": "0.4"
        },
        {
          "label": "30%",
          "value": "0.3"
        },
        {
          "label": "20%",
          "value": "0.2"
        },
        {
          "label": "10%",
          "value": "0.1"
        },
        {
          "label": "0%",
          "value": "0"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text overlay",
      "category": "Image"
    }
  ]
}
{% endschema %}